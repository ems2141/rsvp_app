<section>
  <p><span>Welcome back!</span><p>

  <h1>Please login below</h1>


  <p class="errors"><%= flash[:failed_login] %></p>

  <p style="color: deepskyblue"><%= flash[:notice] %></p>

  <div class="two_third">
    <div class="form_container">
      <%= form_for @user, url: session_path do |f| %>

        <p><%= f.label :email %>
          <%= f.text_field :email %></p>

        <p><%= f.label :password, "Password" %>
          <%= f.password_field :password %></p>

        <p><%= f.submit "Login", :id => 'login_submit', class: "form-button" %></p>
      <% end %>
    </div>
  </div>
</section>