<header><h1 class="welcome">Thank you for RSVP'ing! Please fill in the information below...</h1></header>

<div class="flash_notice">
  <%= flash[:notice] %>
</div>

<% @user.errors.full_messages.each do |error| %>
  <%= error %>
<% end %>


<%= form_for @user, url: "/rsvp" do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :wedding_password, "Wedding Password" %>
    <%= f.password_field :wedding_password %>
  </p>

  <p>
    <%= f.label :password, "Your Password" %>
    <%= f.password_field :password %>
  </p>

  <p>
   All set? <%= f.submit "Yes!", class: "form-button" %>
  </p>

<% end %>


